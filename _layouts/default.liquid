        {% endif %}

        <link rel="stylesheet" type="text/css" href="/static/styles.css">
    </head>
    <body>
      <nav>
        <a href="/"><img
            class="logo"
            alt="Iris logo: a rainbow colored flower."
            src="/static/iris-logo.png"></a>
        <h1><a href="/">Iris</a></h1>
